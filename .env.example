# ========================================
# PIXAPROOF MARKETING SITE
# Environment Configuration Template
# ========================================
# Copy this file to .env and configure values for your environment
# Required: APP_KEY (generate with: php artisan key:generate)

# ========================================
# APPLICATION
# ========================================
APP_NAME="PixaProof"
APP_ENV=local
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost:8000

# Localization
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Encryption (REQUIRED - run: php artisan key:generate)
APP_KEY=

# Key Rotation (comma-separated previous keys)
APP_PREVIOUS_KEYS=

# Maintenance Mode
APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

# PHP CLI Server
PHP_CLI_SERVER_WORKERS=4

# Bcrypt Hashing
BCRYPT_ROUNDS=12

# ========================================
# DATABASE
# ========================================
# Default: SQLite (recommended for development)
DB_CONNECTION=sqlite
DB_DATABASE=database/database.sqlite
DB_FOREIGN_KEYS=true

# MySQL/MariaDB (uncomment to use)
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=pixaproof
# DB_USERNAME=root
# DB_PASSWORD=
# DB_SOCKET=
# DB_CHARSET=utf8mb4
# DB_COLLATION=utf8mb4_unicode_ci
# MYSQL_ATTR_SSL_CA=

# PostgreSQL (uncomment to use)
# DB_CONNECTION=pgsql
# DB_HOST=127.0.0.1
# DB_PORT=5432
# DB_DATABASE=pixaproof
# DB_USERNAME=root
# DB_PASSWORD=
# DB_CHARSET=utf8

# SQL Server (uncomment to use)
# DB_CONNECTION=sqlsrv
# DB_HOST=localhost
# DB_PORT=1433
# DB_DATABASE=pixaproof
# DB_USERNAME=root
# DB_PASSWORD=
# DB_CHARSET=utf8
# DB_ENCRYPT=yes
# DB_TRUST_SERVER_CERTIFICATE=false

# Database URL (alternative to individual settings)
# DB_URL=

# ========================================
# CACHE
# ========================================
CACHE_STORE=database
CACHE_PREFIX=

# Cache Database Connection
# DB_CACHE_CONNECTION=
# DB_CACHE_TABLE=cache
# DB_CACHE_LOCK_CONNECTION=
# DB_CACHE_LOCK_TABLE=

# ========================================
# SESSION
# ========================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_EXPIRE_ON_CLOSE=false
SESSION_ENCRYPT=false
SESSION_CONNECTION=
SESSION_TABLE=sessions
SESSION_STORE=

# Session Cookie Configuration (defaults to lowercase APP_NAME if not set)
# SESSION_COOKIE=
SESSION_PATH=/
SESSION_DOMAIN=
SESSION_SECURE_COOKIE=
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax
SESSION_PARTITIONED_COOKIE=false

# ========================================
# QUEUE
# ========================================
QUEUE_CONNECTION=database
QUEUE_FAILED_DRIVER=database-uuids

# Database Queue
# DB_QUEUE_CONNECTION=
# DB_QUEUE_TABLE=jobs
# DB_QUEUE=default
# DB_QUEUE_RETRY_AFTER=90

# Beanstalkd Queue
# BEANSTALKD_QUEUE_HOST=localhost
# BEANSTALKD_QUEUE=default
# BEANSTALKD_QUEUE_RETRY_AFTER=90

# Redis Queue
# REDIS_QUEUE_CONNECTION=default
# REDIS_QUEUE=default
# REDIS_QUEUE_RETRY_AFTER=90

# ========================================
# REDIS
# ========================================
REDIS_CLIENT=phpredis
REDIS_CLUSTER=redis
REDIS_PREFIX=
REDIS_PERSISTENT=false

# Redis Connection
REDIS_URL=
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_USERNAME=
REDIS_PASSWORD=null
REDIS_DB=0
REDIS_CACHE_DB=1

# Redis Retry Configuration
REDIS_MAX_RETRIES=3
REDIS_BACKOFF_ALGORITHM=decorrelated_jitter
REDIS_BACKOFF_BASE=100
REDIS_BACKOFF_CAP=1000

# Redis Cache
# REDIS_CACHE_CONNECTION=cache
# REDIS_CACHE_LOCK_CONNECTION=default

# ========================================
# MEMCACHED
# ========================================
MEMCACHED_HOST=127.0.0.1
# MEMCACHED_PORT=11211
# MEMCACHED_PERSISTENT_ID=
# MEMCACHED_USERNAME=
# MEMCACHED_PASSWORD=

# ========================================
# MAIL
# ========================================
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# SMTP Configuration
# MAIL_URL=
# MAIL_EHLO_DOMAIN=

# Sendmail
# MAIL_SENDMAIL_PATH="/usr/sbin/sendmail -bs -i"

# Mail Logging
# MAIL_LOG_CHANNEL=

# ========================================
# THIRD-PARTY MAIL SERVICES
# ========================================
# Postmark
# POSTMARK_API_KEY=
# POSTMARK_MESSAGE_STREAM_ID=

# Resend
# RESEND_API_KEY=

# ========================================
# LOGGING
# ========================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=debug
LOG_DEPRECATIONS_CHANNEL=null
LOG_DEPRECATIONS_TRACE=false

# Daily Logs
# LOG_DAILY_DAYS=14

# Slack Logging
# LOG_SLACK_WEBHOOK_URL=
# LOG_SLACK_USERNAME="Laravel Log"
# LOG_SLACK_EMOJI=":boom:"

# Papertrail
# PAPERTRAIL_URL=
# PAPERTRAIL_PORT=
# LOG_PAPERTRAIL_HANDLER=

# Stderr
# LOG_STDERR_FORMATTER=

# Syslog
# LOG_SYSLOG_FACILITY=

# ========================================
# FILESYSTEM
# ========================================
FILESYSTEM_DISK=local

# ========================================
# AWS SERVICES
# ========================================
# S3 / SES / SQS
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_URL=
AWS_ENDPOINT=
AWS_USE_PATH_STYLE_ENDPOINT=false

# SQS Queue
# SQS_PREFIX=https://sqs.us-east-1.amazonaws.com/your-account-id
# SQS_QUEUE=default
# SQS_SUFFIX=

# DynamoDB Cache
# DYNAMODB_CACHE_TABLE=cache
# DYNAMODB_ENDPOINT=

# ========================================
# SLACK
# ========================================
# SLACK_BOT_USER_OAUTH_TOKEN=
# SLACK_BOT_USER_DEFAULT_CHANNEL=

# ========================================
# AUTHENTICATION
# ========================================
AUTH_GUARD=web
AUTH_PASSWORD_BROKER=users
# AUTH_MODEL=App\Models\User
# AUTH_PASSWORD_RESET_TOKEN_TABLE=password_reset_tokens
AUTH_PASSWORD_TIMEOUT=10800

# ========================================
# BROADCASTING
# ========================================
BROADCAST_CONNECTION=log

# ========================================
# VITE (Frontend Build)
# ========================================
VITE_APP_NAME="${APP_NAME}"

# ========================================
# DEPLOYMENT (Production Only)
# ========================================
# Used by deployer (deploy.php)
# DEPLOYER_HOST=
# DEPLOYER_SUDO_PASS=
# DEPLOYER_DB_PASSWORD=
# DEPLOYER_APP_KEY=
# DEPLOYER_STRIPE_KEY=
# GTM_ID=
