# =============================================================================
# Laravel Deployment Environment Template
# =============================================================================
# Copy this file to your server: ~/myapp/shared/.env
# Replace all {{PLACEHOLDER}} values with your actual configuration.
#
# Generate APP_KEY locally: php artisan key:generate --show
# =============================================================================

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
APP_NAME="Pixaproof"
APP_ENV=local
APP_KEY=base64:GENERATE_NEW_KEY_WITH_php_artisan_key_generate_show
APP_DEBUG=false
APP_URL=http://your-domain.test

# -----------------------------------------------------------------------------
# Database (SQLite)
# -----------------------------------------------------------------------------
# Path must match deploy.php sqlite_path setting
DB_CONNECTION=sqlite
DB_DATABASE=database/database.sqlite

# -----------------------------------------------------------------------------
# Cache, Session & Queue (Database)
# -----------------------------------------------------------------------------
CACHE_STORE=database
SESSION_DRIVER=database
QUEUE_CONNECTION=database

# -----------------------------------------------------------------------------
# Filesystem
# -----------------------------------------------------------------------------
FILESYSTEM_DISK=local

# -----------------------------------------------------------------------------
# Mail
# -----------------------------------------------------------------------------
# Options: smtp, mailgun, postmark, ses, log, array
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@{{DOMAIN}}"
MAIL_FROM_NAME="${APP_NAME}"

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# -----------------------------------------------------------------------------
# Application-Specific Variables
# -----------------------------------------------------------------------------
# Add your application's custom environment variables below.
# Examples:
#
# THIRD_PARTY_API_KEY=xxx
# STRIPE_KEY=pk_live_xxx
# STRIPE_SECRET=sk_live_xxx
