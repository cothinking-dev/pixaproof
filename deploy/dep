#!/bin/bash
set -eo pipefail

DEPLOYER_APP_NAME="Pixaproof"
DEPLOYER_HOST="ssh.moojing-global.com"

# ──────────────────────────────────────────────────────────────────────────────
# Do not edit below this line
# ──────────────────────────────────────────────────────────────────────────────

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PROJECT_DIR="$(dirname "$SCRIPT_DIR")"

cd "$PROJECT_DIR"

for arg in "$@"; do
    case "$arg" in
        prod|staging|server) export DEPLOYER_ENV="$arg" ;;
    esac
done

export DEPLOYER_APP_NAME DEPLOYER_HOST

exec vendor/bin/dep "$@"
